<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.algorigo.algorigoutils.MainActivity">

    <Button
        android:id="@+id/dateTimeUtilBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Date Time Util"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/loginValidationBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Login Validation"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@id/dateTimeUtilBtn"
        app:layout_constraintRight_toRightOf="@id/dateTimeUtilBtn"
        app:layout_constraintTop_toBottomOf="@+id/dateTimeUtilBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>
